    background: #ffffff;
    border: 3px solid #ddd;
    border-radius: 8px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
}
.slide{
    width:100%;
    height:100%;
    position:absolute;
    top:0;
    left:0;
    opacity:0;
    transition:opacity 1s ease-in-out;
    animation:slideAnimation 20s infinite;
}
.slide img{
    width: 100%;
    height:100%;
    object-fit:cover;
    filter:brightness(99%);
}
.slide:nth-child(1){
    animation-delay:0s;
    opacity:1
}
.slide:nth-child(2) {
    animation-delay: 4s;
}
.slide:nth-child(3) {
    animation-delay: 8s;
}
.slide:nth-child(4) {
    animation-delay: 12s;
}
.slide:nth-child(5) {
    animation-delay: 16s;
}
.keyframes slideAnimation{
    0%, 100%{
        opacity:0;
    }
    10%, 30%{
        opacity: 1;
    }
}
